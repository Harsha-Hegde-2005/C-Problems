// C program to consturct pyramid with n rows displaying the row number 
#include <stdio.h>

int main() {
    printf("Enter the number of rows :");
    int n;
    scanf("%d", &n);
    for(int i=1;i<=n;i++)
    {
        for(int j=0;j<i;j++)
        {
            printf("%d",j+1);
        }
        printf("\n");
    }
    return 0;
}


//Note: For displaying a '*' pyramid change the printf statement inside loop as " printf('*') "
