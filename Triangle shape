// pattern to print a triangle shape
#include <stdio.h>

int main() {
    int n; 
    printf("Enter the number of rows: ");
    scanf("%d",&n);
    for(int i=0;i<n-1;i++)
    {
        for(int j=0;j<=2*n-1;j++)
        {
            if(j==n-i || j==n+i)
            {
                printf("*");
            }
            else
            printf(" ");
        }
        printf("\n");
    }
    for(int i=1;i<=n;i++)
    {
        printf(" *");
    }
    return 0;
}
